{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "checkJs": true,
    "allowJs": true,
    "rootDir": "src",
    "outDir": "lib",
    "declarationDir": "types",
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2020"],
    "target": "ES2020",
  },
  "include": ["./src", "./types/*"],
}